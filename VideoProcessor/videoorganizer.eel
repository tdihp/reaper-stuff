//@param 1:debug "debug" 0 0 1 0.5 1
// grid settings
//@param 2:totalxblocks "totalXBlocks" 10 1 16 10 1
//@param 3:totalyblocks "totalYBlocks" 6 1 16 10 1
// must be smaller than MAX_BLOCK_DIM

// switch prioritized growing direction, horizontal by default
//@param 4:vfirst "hfirst/vfirst" 0 0 1 0.5 1
//@param 5:cropratio "cropratio" 1.0 0.5 2.0 1.0 0.1
//@param 6:presasp "nofill/stretch/preserve/crop"  2 -1 2 0 1
//@param 7:maxclipbx "MaxClipBlockX" 16 1 16 10 1
//@param 8:maxclipby "MaxClipBlockY" 16 1 16 10 1
//@param 9:xcentered "x left/center" 1 0 1 0.5 1
//@param10:ycentered "y  top/center" 1 0 1 0.5 1
//@param11:atleast1blk "atleast1blkperclip" 0 0 1 0.5 1

// Blur (low quality)
//@param13:weight_parm 'blur amount' .5 0 .99 0.5 0.001
//@param14:weight_mod 'Y modifier' 1 .8 1.2 1.0 0.001
//@param15:want_l 'leftward' 1 0 1 .5 1
//@param16:want_r 'rightward' 1 0 1 .5 1
//@param17:want_u 'upward' 1 0 1 .5 1
//@param18:want_d 'downward' 1 0 1 .5 1
//@param19:force_rgb 'force RGB' 0 0 1 .5 1

// -----------------------------------------------------------------------------
// debug infra
// -----------------------------------------------------------------------------

dbgh = 20;
dbgstart = dbgh;
dbgx = dbgh;
dbgy = dbgh;
dbgfont="Noto Sans SC";
dbgtext = #;
function log(s)
(
  debug?(
    gfx_set(1,1,1,1,1);
    gfx_setfont(dbgh,dbgfont);
    gfx_str_draw(s, dbgx, dbgy);
    dbgy += dbgh;
  );
);

